            android:layout_height="wrap_content"
            android:text="Activity 1"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:padding="20dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amin Sholeh"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:padding="20dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:padding="20dp"/>

    </LinearLayout>


</LinearLayout>